---
interface Props {
  title: string;
  items: Record<string, { name: string; icon: any }>;
}

const { title, items } = Astro.props;
---

<div class="flex flex-col items-center m-6">
  <span class="text-xl font-bold text-yellow-400"> {title} </span>
  <div class="flex flex-wrap justify-center gap-3 pt-3">
    {
      Object.values(items).map(({ icon: Icon, name }) => (
        <Icon class="size-10" title={name} />
      ))
    }
  </div>
</div>
